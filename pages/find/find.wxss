.fixtop{
    position: fixed;
    top:0px;
    left:0;
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: center;
}
.fixtop .title{
    width: 33.333%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    color: #333;
    position: relative;
}
.fixtop .active{
    position: relative;
}
.fixtop .active::after{
    content: '';
    position: absolute;
    width:50rpx;
    border-bottom: 3px solid #f55;
    bottom:0px;
    left:50%;
    transform: translateX(-50%);
} 
.find_warp{
    width: 100%;
    height: 100%;
    position: fixed;
    top:88rpx;
    bottom: 0;
    left: 0;
    background-color: #fff;
}
.find_warp .swiper{
    width: 100%;
    height: 100%;
}
.find_warp .swiper .scroll_view{
    width: 100%;
    height: 100%;
}
