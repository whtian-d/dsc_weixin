@import "../../fonts/dsc_small_font.wxss";

.category_warp {
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    top: 0px;
    bottom: 0px;
    height: 100%;
}

.category_warp .header_warp {
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #ccc;
    padding: 16rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.category_warp .header_warp .back {
    font-size: 32rpx;
    color: #999;
}

.category_warp .search_content {
    width: 620rpx;
    height: 64rpx;
    border: 1px solid #ddd;
    border-radius: 30rpx;
    margin-left: 20rpx;
    position: relative;
}

.category_warp .search_content .iconfont {
    font-size: 32rpx;
    position: absolute;
    top:50%;
    transform: translateY(-50%);
    right:20rpx;
}
/* 下面内容 */
.category_warp .content{
    width: 100%;
    position: absolute;
    top:100rpx;
    bottom: 0;
    height: 100%;
    display: flex;
}
.category_warp .content .left{
    width: 168rpx;
    height: 100%;
    border-right: 1px solid #ccc;
}
.category_warp .content .right{
    width: calc(100% - 168rpx);
    height: 100%;
}
/* 左边的样式 */
.category_warp .content .left .title{
    width: 100%;
    height: 76rpx;
    display: flex;
    align-items: center;
}
.category_warp .content .left .title .text{
    width: 100%;
    height: 40rpx;
    border-left: 5rpx solid transparent;
    font-size: 26rpx;
    text-align: center;
    color:#999;
}
.category_warp .content .left .active .text{
    border-color: #f23030;
    color: #f23030;
}
/* 右边的样式 */
.category_warp .content .right .scroll_list{
    width: 100%;
    height: 100%;
    padding-bottom: 20rpx;
    box-sizing: border-box;
}
.category_warp  .right .title_img{
    width: 100%;
    height: 192rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    padding: 0 20rpx;
}
.category_warp  .right .title_img image{
    width: 100%;
    height: 100%;
}
.category_warp  .right .list_warp{
    width: 100%;
    height: auto;
    padding: 0 20rpx;
}
.category_warp  .right .list_warp .list_item{
    width: 100%;
    overflow: hidden;
    overflow: hidden;
}
.category_warp  .right .list_warp .list_item .header{
    width: 100%;
    height: 50rpx;
    margin: 20rpx 0;
    text-align: center;
    font-size: 26rpx;
    color: #333;
}
.category_warp  .right .list_warp .goods_category{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}
.category_warp  .right .list_warp .goods_category .goods{
    width: 180rpx;
    height: 164rpx;
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.category_warp  .right .list_warp .goods_category .goods .imgbox{
    width: 104rpx;
    height: 104rpx;
}
.category_warp  .right .list_warp .goods_category .goods .imgbox image{
    width: 100%;
    height: 100%;
}
.category_warp  .right .list_warp .goods_category .goods .text{
    margin-top: 20rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #777;
    text-align: center;
}