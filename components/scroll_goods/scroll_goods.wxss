@import "../../fonts/dsc_small_font.wxss";
.scroll_wrap {
    width: 95%;
    margin: 30rpx auto 20rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: #efefef;
}

.scroll_wrap .scroll_items {
    width: 49%;
    background-color: #fff;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    padding-bottom: 30rpx;
}

.scroll_wrap .scroll_items .scrollgoods_img {
    height: 353rpx;
    width: 100%;
}

.scroll_wrap .scroll_items .scrollgoods_img image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx 20rpx;
}
.scroll_wrap .scroll_items .scrollgoods_img video{
    width: 100%;
    height: 100%;
    border-radius: 20rpx 20rpx;
}
.scrollgoods_title{
    width: 100%;
    font-size: 28rpx;
    line-height: 42rpx;
    height: 104rpx;
    padding: 20rpx 20rpx 0;
    margin-bottom: 10rpx;
    box-sizing: border-box;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.scrollgoods_price{
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    color: rgb(242, 14, 40);
    padding: 0 20rpx;
    box-sizing: border-box;
}
.scrollgoods_outer{
    padding: 0 20rpx;
    box-sizing: border-box;
    width: 100%;
    height: 40rpx;
    position: relative;
    margin-top: 20rpx;
}
.scrollgoods_outer .goshop{
    background-color: #fef0f0;
    padding: 2rpx 10rpx;
    border-radius: 4rpx;
    color: #f92028;
    font-size: 26rpx;
}
.scrollgoods_outer .shopNum{
    color: #999;
    margin-left: 12rpx;
    font-size: 24rpx;
    display: inline-block;
}
.scrollgoods_outer .iconfont{
    position: absolute;
    right:20rpx;
    color:#f92028;
    top:0px
}
/* 新加得评价 */
.scroll_wrap .pingjia{
    width: 100%;
    height: 44rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    display: flex;
    margin-top: 20rpx;
    justify-content: space-between;
}
.scroll_wrap .pingjia .author{
    display: flex;
    height: 100%;
    justify-content: center;
}
.scroll_wrap .pingjia .author .logo{
    width: 44rpx;
    height: 44rpx;
    border-radius: 22rpx;
    margin-right: 10rpx;
}
.scroll_wrap .pingjia .author .logo image{
    width: 100%;
    height: 100%;
    border-radius: 22rpx;
}
.scroll_wrap .pingjia .author .name{
    color:#666;
    line-height: 44rpx;
    font-size: 24rpx;
}
.scroll_wrap .pingjia .watchNum{
    height: 100%;
    display: flex;
    align-items: center;
}
.scroll_wrap .pingjia .watchNum .iconfont{
    font-size: 16rpx;
    margin-right: 6rpx;
    color:#ccc
}
.scroll_wrap .pingjia .watchNum .num{
    font-size: 24rpx;
    color:#ccc;
}
/* 点击分类后 */
.scroll_items_category{
    width: 100%;
}
.scroll_items_category>view{
    width: 100%;
    display: flex;
    /* height: 220rpx; */
    padding: 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin-top: 20rpx;
    box-sizing: border-box;
}
.scroll_items_category>view .scrollgoods_img{
    width: 180rpx;
    height: 180rpx;
}
.scroll_items_category>view .scrollgoods_img image{
    width: 100%;
    height: 100%;
}
.scroll_items_category>view .desc{
    width: calc(100% - 180rpx);
    height: 100%;
}